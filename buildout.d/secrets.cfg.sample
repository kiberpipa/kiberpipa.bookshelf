[secrets]

# SOLR URL
solr_base_url = http://127.0.0.1:8984/solr/en

# comma spearated IP range that is allowed to access download links
allowed_networks = 127.0.0.1,10.0.0.0/8,192.168.0.0/16,172.16.0.0/12

# URL that leads to download links
trusted_download_host = http://download.books.net

# URL that leads to a link that tells user he is not in right network
untrusted_download_host = http://no.books.net

# Sentry/Raven URL to report errors when they happen on production (ignore this on development)
sentry_dsn = http://localhost/1
